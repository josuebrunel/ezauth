# Global Settings
EZAUTH_ADDR=":8080"
EZAUTH_DEBUG=false
EZAUTH_JWT_SECRET="your-super-secret-key"
EZAUTH_TIMEOUT="30s"

# Database Settings
EZAUTH_DB_DIALECT="sqlite3"
EZAUTH_DB_DSN="ezauth.db"

# OAuth2 Settings
EZAUTH_OAUTH2_CALLBACK_URL="http://localhost:3000/callback"

# Google
EZAUTH_OAUTH2_GOOGLE_CLIENT_ID="your-google-client-id"
EZAUTH_OAUTH2_GOOGLE_CLIENT_SECRET="your-google-client-secret"
EZAUTH_OAUTH2_GOOGLE_REDIRECT_URL="http://localhost:8080/auth/oauth2/google/callback"
EZAUTH_OAUTH2_GOOGLE_SCOPES="email,profile"

# GitHub
EZAUTH_OAUTH2_GITHUB_CLIENT_ID="your-github-client-id"
EZAUTH_OAUTH2_GITHUB_CLIENT_SECRET="your-github-client-secret"
EZAUTH_OAUTH2_GITHUB_REDIRECT_URL="http://localhost:8080/auth/oauth2/github/callback"
EZAUTH_OAUTH2_GITHUB_SCOPES="user:email"

# Facebook
EZAUTH_OAUTH2_FACEBOOK_CLIENT_ID="your-facebook-client-id"
EZAUTH_OAUTH2_FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
EZAUTH_OAUTH2_FACEBOOK_REDIRECT_URL="http://localhost:8080/auth/oauth2/facebook/callback"
EZAUTH_OAUTH2_FACEBOOK_SCOPES="email"
